&GLOBAL
  PROJECT 1
  RUN_TYPE MD
  PRINT_LEVEL low
&END GLOBAL

&MOTION
  &MD  
    ENSEMBLE NVT
    STEPS  5000
    TIMESTEP 1.0
    TEMPERATURE 300.15
#     ANGVEL_TOL 0.000000001
#     COMVEL_TOL 0.000000001
#     ANGVEL_ZERO TRUE 
     &THERMOSTAT
       TYPE  NOSE
       REGION  GLOBAL
       &NOSE
         LENGTH               3
         TIMECON     2.2237606346543473E+01
       &END NOSE
     &END THERMOSTAT
     &PRINT
       &ENERGY  SILENT
       &END ENERGY
     &END PRINT
  &END MD
   &CONSTRAINT
      &FIXED_ATOMS
        LIST     1..48   
      &END FIXED_ATOMS
   &END CONSTRAINT
  &PRINT
     &TRAJECTORY  SILENT
       &EACH
         MD               5
       &END EACH
     &END TRAJECTORY
     &VELOCITIES  SILENT
       &EACH
         MD               5
       &END EACH
     &END VELOCITIES
     &RESTART  SILENT
       &EACH
         MD               10
       &END EACH
     &END RESTART
  &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
		 UKS  T
     CHARGE 0
     POTENTIAL_FILE_NAME  GTH_POTENTIALS
     BASIS_SET_FILE_NAME  BASIS_MOLOPT
     WFN_RESTART_FILE_NAME ./pt-RESTART.wfn 
#    &POISSON
#     PERIODIC XYZ
#     POISSON_SOLVER wavelet #MT 
#    &END POISSON
    &MGRID
      CUTOFF 400
      NGRIDS 20
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-6
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3 # find the best for your system
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 80  
      ADDED_MOS 50
      SCF_GUESS ATOMIC
      CHOLESKY INVERSE
       &SMEAR ON
        METHOD FERMI_DIRAC
       &END SMEAR
       &DIAGONALIZATION
       ALGORITHM STANDARD
       &END DIAGONALIZATION
#         MINIMIZER DIIS
#         N_DIIS 5
#         PRECONDITIONER FULL_ALL
#         ENERGY_GAP 0.001
#         EPS_IRAC 1.0E-10
#         STEPSIZE 0.1
#          MINIMIZER  CG
       &OUTER_SCF
         EPS_SCF 1.0E-5
         MAX_SCF 50
#         STEP_SIZE 0.5
#         EXTRAPOLATION_ORDER 4
       &END OUTER_SCF
       &MIXING ON
       METHOD BROYDEN_MIXING
         ALPHA 0.2
         BETA  1.5  
         NBROYDEN 32
       &END MIXING
       &PRINT
          &RESTART_HISTORY
            FILENAME = MD_RESTART_HISTORY.wfn
            ADD_LAST NUMERIC
            BACKUP_COPIES 5
            &EACH
            &END EACH
          &END RESTART_HISTORY
      &END PRINT 
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_SMOOTH_RHO NN10
        XC_DERIV SPLINE2_SMOOTH
      &END XC_GRID
      &vdW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD3
#            LONG_RANGE_CORRECTION .T.
#            D3_SCALING 1.0 1.094 1.682
#            CALCULATE_C9_TERM .TRUE.
            PARAMETER_FILE_NAME dftd3.dat
            REFERENCE_FUNCTIONAL PBE
            R_CUTOFF 10.
#            EPS_CN 0.01
         &END PAIR_POTENTIAL
      &END vdW_POTENTIAL 
    &END XC
    &PRINT
      &MULLIKEN  SILENT
        FILENAME =CHARGE.mulliken
        &EACH
           MD               5
        &END EACH
      &END MULLIKEN
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 11.0985  14.4173  26.796400
#      ALPHA_BETA_GAMMA 90.0000   90.0000   90.0000
      PERIODIC XYZ
    &END CELL

    &TOPOLOGY
      COORD_FILE_NAME init.xyz
      COORD_FILE_FORMAT xyz
#Do not center here!
#      &CENTER_COORDINATES
#      &END
    &END TOPOLOGY

#    &KIND Zr
#      BASIS_SET DZVP-MOLOPT-SR-GTH
#      POTENTIAL GTH-PBE-q12
#    &END KIND
#    &KIND Al
#      BASIS_SET DZVP-MOLOPT-SR-GTH
#      POTENTIAL GTH-PBE-q16
#    &END KIND
    &KIND O
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
      MASS 2.0
    &END KIND
    &KIND Pt
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q18
    &END KIND
    &KIND K
       BASIS_SET DZVP-MOLOPT-SR-GTH
       POTENTIAL GTH-PBE-q9
    &END KIND
#    &COLVAR
#      &DISTANCE
#        ATOMS 101 106
#      &END  
#    &END COLVAR
  &END SUBSYS
&END FORCE_EVAL




